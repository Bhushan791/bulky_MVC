@page
@model bulkyweb_razor_pages.Pages.Categories.IndexModel
@{
}



@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        @TempData["success"]
    </div>
}

<div class="container mt-4">

    <div class="row mb-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td class="text-end">
                        <a asp-page="/Categories/Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-pencil-square me-1"></i> Edit
                        </a>
                        <a asp-page="/Categories/Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger btn-sm">
                            <i class="bi bi-trash me-1"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
