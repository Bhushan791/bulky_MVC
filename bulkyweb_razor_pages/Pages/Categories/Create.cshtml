@page
@model bulkyweb_razor_pages.Pages.Categories.CreateModel
@{
}

<h1>Create Category</h1>

<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">

            <h2 class="text-primary">Create Category</h2>
            <hr />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Category.Name" class="form-label">Category Name</label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Category.DisplayOrder" class="form-label">Display Order</label>
                <input asp-for="Category.DisplayOrder" class="form-control" />
                <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary me-2" style="width:150px;">Create</button>
            <a asp-page="/Categories/Index" class="btn btn-secondary" style="width:150px;">Go Back</a>

        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
