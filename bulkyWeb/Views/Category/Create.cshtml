@model Category
<h1>Create Category Lol</h1>

<form asp-action="Create" method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">

            <h2 class="text-primary">Create Category</h2>
            <hr />
            <div> 
                
                <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label>Category Name</label>
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Display Order</label>
                <input asp-for="DisplayOrder" type="text" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px; margin-right:10px;">Create</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">GO back</a>

        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




